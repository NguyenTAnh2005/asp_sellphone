@model old_phone.Models.Product_Image

@{
    ViewBag.Title = "Xóa Ảnh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white text-center py-4">
                    <i class="bi bi-trash3-fill" style="font-size: 3rem;"></i>
                    <h4 class="fw-bold mt-2">Xác Nhận Xóa Ảnh?</h4>
                    <p class="mb-0 opacity-75">Hành động này không thể hoàn tác.</p>
                </div>

                <div class="card-body p-4 text-center">
                    <div class="mb-4 position-relative d-inline-block">
                        <img src="@Model.image_url" class="img-thumbnail rounded shadow-sm" style="height: 150px;" alt="Image To Delete" onerror="this.src='https://via.placeholder.com/150'">
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            <i class="bi bi-x-lg"></i>
                        </span>
                    </div>

                    <div class="bg-light p-3 rounded-3 mb-4 border text-start">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Sản phẩm:</span>
                            <strong class="text-dark">@Model.Product.product_name</strong>
                        </div>
                        <div class="mt-2 text-break small text-muted">
                            Link: @Model.image_url
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-center gap-3">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="bi bi-x-lg me-1"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold shadow">
                                <i class="bi bi-trash-fill me-1"></i> Xóa ngay
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>