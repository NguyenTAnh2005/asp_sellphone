@model PagedList.IPagedList<old_phone.Models.Product_Image>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Thư Viện Ảnh Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0"><i class="bi bi-images me-2"></i> Thư Viện Ảnh Sản Phẩm </h2>
            <p class="text-muted small mb-0">Quản lý bộ sưu tập ảnh chi tiết cho sản phẩm</p>
            <p class="text-muted small mb-0">Những ảnh này sẽ được tải vào Carousel trong chi tiết sản phẩm!</p>
        </div>
        @Html.ActionLink("Thêm Ảnh Mới", "Create", null, new { @class = "btn btn-success rounded-pill px-4 fw-bold shadow-sm" })
    </div>

    @*Lọc tìm kiếm*@
    <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white">
        <div class="card-body p-3">
            @using (Html.BeginForm("Index", "ManageProduct_Image", FormMethod.Get))
            {
                <div class="row g-3 align-items-center">
                    <div class="col-md-5">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-search text-muted"></i></span>
                            @Html.TextBox("searchQuery", ViewBag.CurrentFilter as string, new { @class = "form-control border-start-0 bg-light", placehodlder = "Tìm theo tên sản phẩm" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 fw-bold text-muted">Sản phẩm:</span>
                            @Html.DropDownList("productId", ViewBag.ProductList as SelectList, "--- Tất cả sản phẩm ---", new { @class = "form-select bg-light border-start-0" })
                        </div>
                    </div>
                    <div class="col-md-3 text-end">
                        <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold"><i class="bi bi-funnel-fill me-1"></i> Lọc</button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-3"><i class="bi bi-arrow-counterclockwise"></i></a>
                    </div>
                </div>
            }
        </div>
    </div>
    @*Show list of images*@
    <div class="card shadow border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="bg-light text-uppercase small fw-bold text-secondary">
                        <tr>
                            <th class="ps-4 text-center" style="width: 120px;">Hình Ảnh</th>
                            <th>Sản Phẩm</th>
                            <th>Đường Dẫn (URL)</th>
                            <th class="text-end pe-4" style="width: 150px;">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 text-center py-3">
                                    <div class="ratio ratio-1x1" style="width: 80px; margin: 0 auto;">
                                        <img src="@item.image_url" class="rounded border shadow-sm object-fit-cover" alt="Product Img" onerror="this.src='https://via.placeholder.com/80?text=No+Image'">
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">@Html.DisplayFor(modelItem => item.Product.product_name)</div>
                                    <span class="badge bg-light text-secondary border">ID: @item.product_id</span>
                                </td>
                                <td>
                                    <a href="@item.image_url" target="_blank" class="text-decoration-none text-truncate d-block" style="max-width: 300px;">
                                        <i class="bi bi-link-45deg"></i> @item.image_url
                                    </a>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm" role="group">
                                        <a href="@Url.Action("Edit", new { id = item.image_id })" class="btn btn-sm btn-outline-warning" title="Sửa"><i class="bi bi-pencil-square"></i></a>
                                        <a href="@Url.Action("Details", new { id = item.image_id })" class="btn btn-sm btn-outline-info" title="Chi tiết"><i class="bi bi-eye"></i></a>
                                        <a href="@Url.Action("Delete", new { id = item.image_id })" class="btn btn-sm btn-outline-danger" title="Xóa"><i class="bi bi-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @*Show pagination controls *@
    <div class="card-footer bg-white d-flex justify-content-between align-items-center py-3">
        <div class="text-muted small">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            (Tổng: @Model.TotalItemCount ảnh)
        </div>

        <nav>
            @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page, searchQuery = ViewBag.CurrentFilter, productId = ViewBag.CurrentProductID }),
                new PagedListRenderOptions
                {
                    LiElementClasses = new string[] { "page-item" },
                    LinkToPreviousPageFormat = "<i class='bi bi-chevron-left'></i>",
                    LinkToNextPageFormat = "<i class='bi bi-chevron-right'></i>",
                    ClassToApplyToFirstListItemInPager = "page-item",
                    ClassToApplyToLastListItemInPager = "page-item",
                    ContainerDivClasses = new[] { "pagination-container" }
                })
        </nav>
    </div>
</div>