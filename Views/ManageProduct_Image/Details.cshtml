@model old_phone.Models.Product_Image

@{
    ViewBag.Title = "Chi Tiết Ảnh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-info text-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0"><i class="bi bi-image-fill me-2"></i> Chi Tiết Hình Ảnh</h5>
                    <span class="badge bg-light text-dark">ID: @Model.image_id</span>
                </div>

                <div class="bg-dark text-center p-4">
                    <img src="@Model.image_url" class="img-fluid rounded shadow" style="max-height: 500px;" alt="Product Image" onerror="this.src='https://via.placeholder.com/500?text=Image+Not+Found'">
                </div>

                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold text-muted text-uppercase small">Sản phẩm:</div>
                        <div class="col-md-9 fs-5 fw-bold text-primary">@Html.DisplayFor(model => model.Product.product_name)</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3 fw-bold text-muted text-uppercase small">Đường dẫn:</div>
                        <div class="col-md-9 text-break">
                            <a href="@Model.image_url" target="_blank" class="text-decoration-none">@Model.image_url</a>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                        <a href="@Url.Action("Index")" class="btn btn-light border rounded-pill px-4">
                            <i class="bi bi-arrow-left me-1"></i> Quay lại
                        </a>
                        <a href="@Url.Action("Edit", new { id = Model.image_id })" class="btn btn-warning rounded-pill px-4 fw-bold shadow-sm">
                            <i class="bi bi-pencil-square me-1"></i> Chỉnh sửa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>