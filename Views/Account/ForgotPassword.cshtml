@{
    ViewBag.Title = "Quên Mật Khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden animate__animated animate__fadeInDown">
                <div class="card-header text-white text-center py-4" style="background-color: #ff5722;">
                    <h3 class="fw-bold mb-0"><i class="bi bi-key-fill"></i> Khôi Phục</h3>
                    <p class="mb-0 opacity-75 small">Cấp lại mật khẩu qua Email</p>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-envelope-paper-heart text-secondary" style="font-size: 3rem;"></i>
                        <p class="text-muted small mt-2">
                            Nhập email đã đăng ký để nhận mật khẩu mới.
                        </p>
                    </div>
                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        @* Hiển thị lỗi nếu có *@
                        if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger text-center rounded-3 p-2 mb-3 small">
                                <i class="bi bi-exclamation-circle-fill me-1"></i> @ViewBag.Error
                            </div>
                        }

                        <div class="form-floating mb-3">
                            <input type="email" class="form-control rounded-pill" id="emailInput" name="email" placeholder="name@example.com" required>
                            <label for="emailInput" class="ps-4">Địa chỉ Email của bạn</label>
                        </div>

                        <button type="submit" class="btn btn-danger w-100 rounded-pill fw-bold py-2 shadow-sm mb-3" style="background-color: #ff5722; border:none;">
                            <i class="bi bi-send-fill me-2"></i> Gửi Yêu Cầu
                        </button>
                    }
                    <div class="text-center pt-2 border-top">
                        <a href="@Url.Action("Login", "Account")" class="text-decoration-none fw-bold text-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Quay lại Đăng nhập
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>