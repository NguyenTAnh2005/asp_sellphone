@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden animate__animated animate__fadeInDown">

                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="fw-bold mb-0">Đăng Nhập</h3>
                    <p class="mb-0 opacity-75 small">Chào mừng bạn quay trở lại!</p>
                </div>

                <div class="card-body p-4">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        @* Thông báo lỗi *@
                        if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger text-center py-2 mb-3" style="font-size: 0.9rem;">
                                <i class="bi bi-exclamation-triangle-fill me-1"></i> @ViewBag.Error
                            </div>
                        }

                        @* Input Email *@
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control rounded-pill" id="emailInput" name="account_email" placeholder="name@example.com" required>
                            <label for="emailInput" class="ps-4">Email đăng nhập</label>
                        </div>

                        @* Input Password *@
                        <div class="form-floating mb-3 position-relative">
                            @* Thêm class pe-5 (padding-end) để chữ không bị đè lên icon *@
                            <input type="password" class="form-control rounded-pill pe-5" id="passInput" name="account_password" placeholder="Password" required>
                            <label for="passInput" class="ps-4">Mật khẩu</label>

                            @* Icon Mắt - Đặt vị trí tuyệt đối bên phải *@
                            <span class="position-absolute top-50 end-0 translate-middle-y me-3 text-secondary"
                                  onclick="togglePassword()"
                                  style="cursor: pointer; z-index: 10;">
                                <i class="bi bi-eye-slash" id="iconEye"></i>
                            </span>
                            <script>
                                function togglePassword() {
                                    // 1. Lấy các thẻ HTML cần thiết
                                    var input = document.getElementById("passInput");
                                    var icon = document.getElementById("iconEye");

                                    // 2. Kiểm tra trạng thái hiện tại
                                    if (input.type === "password") {
                                        input.type = "text";
                                        icon.classList.remove("bi-eye-slash");
                                        icon.classList.add("bi-eye");
                                    } else {
                                        input.type = "password";
                                        icon.classList.remove("bi-eye");
                                        icon.classList.add("bi-eye-slash");
                                    }
                                }
                            </script>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold py-2 shadow-sm mt-2">
                            Đăng Nhập <i class="bi bi-box-arrow-in-right ms-1"></i>
                        </button>
                        <div class=" d-flex justify-content-center mt-4">
                            <input type="checkbox" name="rememberMe" id="rememberInput" value="true" />
                            <label for="remeberInput" class="ps-1">Lưu thông tin đăng nhập!</label>
                        </div>
                    }
                </div>

                <div class="card-footer text-center bg-white border-0 pb-2">
                    <p class="mb-1 small text-muted">Chưa có tài khoản?</p>
                    <a href="@Url.Action("Signup", "Account")" class="btn btn-outline-secondary btn-sm rounded-pill px-3">
                        Đăng ký ngay
                    </a>
                </div>
                <a href="@Url.Action("ForgotPassword", "Account")" class="small text-decoration-none text-center fw-bold text-main-CL pb-4">
                    Quên mật khẩu?
                </a>
            </div>
        </div>
    </div>
</div>
