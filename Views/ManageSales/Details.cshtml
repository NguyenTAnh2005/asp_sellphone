@model old_phone.Models.Sale

@{
    ViewBag.Title = "Chi Tiết Khuyến Mãi";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Tính toán phần trăm giảm giá (nếu có)
    double discountPercent = 0;
    if (Model.Variant_Phone != null && Model.Variant_Phone.variant_ph_new_price > 0)
    {
        double original = (double)Model.Variant_Phone.variant_ph_new_price;
        double final = (double)Model.Variant_Phone.variant_ph_final_price;
        if (original > final)
        {
            discountPercent = Math.Round((1 - (final / original)) * 100, 0);
        }
    }
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-info text-white py-3">
                    <h5 class="fw-bold mb-0 text-center"><i class="bi bi-info-circle-fill me-2"></i> THÔNG TIN CHƯƠNG TRÌNH</h5>
                </div>

                <div class="card-body p-4">
                    <h3 class="text-primary fw-bold text-center mb-4">@Html.DisplayFor(model => model.sale_name)</h3>

                    <div class="card bg-light border-0 mb-4 shadow-sm">
                        <div class="card-body d-flex align-items-center">
                            <div class="me-3">
                                @if (Model.Variant_Phone != null && !string.IsNullOrEmpty(Model.Variant_Phone.variant_ph_img))
                                {
                                    <img src="@Model.Variant_Phone.variant_ph_img" class="rounded border bg-white" style="width: 80px; height: 80px; object-fit: cover;" alt="Product Image" onerror="this.src='https://via.placeholder.com/80'">
                                }
                                else
                                {
                                    <div class="bg-white rounded d-flex align-items-center justify-content-center border" style="width: 80px; height: 80px;"><i class="bi bi-image fs-2 text-muted"></i></div>
                                }
                            </div>

                            <div class="flex-grow-1">
                                <h5 class="fw-bold mb-1 text-dark">
                                    @if (Model.Variant_Phone != null)
                                    {@Model.Variant_Phone.Product.product_name }
                                else
                                { <span class="text-muted fst-italic">Sản phẩm đã xóa</span>}
                                </h5>

                                @if (Model.Variant_Phone != null)
                                {
                                    <div class="d-flex gap-2">
                                        <span class="badge bg-secondary"><i class="bi bi-palette me-1"></i> @Model.Variant_Phone.variant_ph_color</span>
                                        <span class="badge bg-dark"><i class="bi bi-memory me-1"></i> @Model.Variant_Phone.variant_ph_ram GB / @Model.Variant_Phone.variant_ph_rom GB</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    @if (Model.Variant_Phone != null)
                    {
                        <div class="card border-danger mb-4">
                            <div class="card-body row align-items-center text-center">
                                <div class="col-6 border-end">
                                    <small class="text-muted text-uppercase fw-bold d-block mb-1">Giá Niêm Yết</small>
                                    <div class="fs-5 text-muted text-decoration-line-through">
                                        @Model.Variant_Phone.variant_ph_new_price.ToString("N0") đ
                                    </div>
                                </div>
                                <div class="col-6">
                                    <small class="text-danger text-uppercase fw-bold d-block mb-1">Giá Khuyến Mãi Thêm</small>
                                    <div class="fs-3 fw-bold text-danger">
                                        @Model.Variant_Phone.variant_ph_final_price.ToString("N0") đ
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row text-center g-0 mb-4 border rounded-3 overflow-hidden">
                        <div class="col-6 bg-light p-3 border-end">
                            <small class="text-uppercase text-muted fw-bold d-block mb-1">Bắt đầu</small>
                            <div class="text-success fw-bold fs-5">
                                <i class="bi bi-calendar-check me-1"></i> @Model.sale_start.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                        <div class="col-6 bg-light p-3">
                            <small class="text-uppercase text-muted fw-bold d-block mb-1">Kết thúc</small>
                            <div class="text-danger fw-bold fs-5">
                                <i class="bi bi-calendar-x me-1"></i> @Model.sale_end.ToString("dd/MM/yyyy")
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                        <a href="@Url.Action("Index")" class="btn btn-light border rounded-pill px-4">
                            <i class="bi bi-arrow-left me-1"></i> Quay lại
                        </a>
                        <a href="@Url.Action("Edit", new { id = Model.sale_id })" class="btn btn-warning rounded-pill px-4 fw-bold shadow-sm">
                            <i class="bi bi-pencil-square me-1"></i> Sửa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>