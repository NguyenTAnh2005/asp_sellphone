@model PagedList.IPagedList<old_phone.Models.Sale>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh Sách Khuyến Mãi";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var today = DateTime.Now;
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0"><i class="bi bi-percent me-2"></i> Quản Lý Khuyến Mãi</h2>
            <p class="text-muted small mb-0">Thiết lập các đợt giảm giá và sự kiện</p>
        </div>
        @Html.ActionLink("Tạo Chương Trình Mới", "Create", null, new { @class = "btn btn-success rounded-pill px-4 fw-bold shadow-sm" })
    </div>

    <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white">
        <div class="card-body p-3">
            @using (Html.BeginForm("Index", "ManageSales", FormMethod.Get))
            {
                <div class="row g-3 align-items-center">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 fw-bold text-muted">Hãng:</span>
                            @Html.DropDownList("eventName", ViewBag.EventList as SelectList, "--- Tất cả chương trình giảm giá ---", new { @class = "form-select bg-light border-start-0" })
                        </div>
                    </div>
                    <div class="col-md-3 text-end">
                        <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold"><i class="bi bi-funnel-fill me-1"></i> Lọc</button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-3"><i class="bi bi-arrow-counterclockwise"></i></a>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="card shadow border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="bg-light text-uppercase small fw-bold text-secondary">
                        <tr>
                            <th class="ps-4 py-3">Tên Chương Trình</th>
                            <th>Sản Phẩm Áp Dụng</th>
                            <th>Thời Gian</th>
                            <th>Trạng Thái</th>
                            <th class="text-end pe-4">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            // Logic tính trạng thái hiển thị
                            string badgeClass = "bg-secondary";
                            string statusText = "Đã kết thúc";

                            if (item.sale_start > today)
                            {
                                badgeClass = "bg-warning text-dark";
                                statusText = "Sắp diễn ra";
                            }
                            else if (item.sale_end >= today)
                            {
                                badgeClass = "bg-success";
                                statusText = "Đang diễn ra";
                            }

                            <tr>
                                <td class="ps-4 fw-bold text-dark">
                                    @Html.DisplayFor(modelItem => item.sale_name)
                                </td>
                                <td>
                                    @if (item.Variant_Phone != null)
                                    {
                                        <div class="fw-bold">@item.Variant_Phone.Product.product_name</div>
                                        <span class="badge bg-light text-dark border">
                                            @item.Variant_Phone.variant_ph_color - @item.Variant_Phone.variant_ph_ram/@item.Variant_Phone.variant_ph_rom GB
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">(Sản phẩm đã bị xóa)</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex flex-column small">
                                        <span class="text-success"><i class="bi bi-calendar-check me-1"></i> @item.sale_start.ToString("dd/MM/yyyy")</span>
                                        <span class="text-danger"><i class="bi bi-calendar-x me-1"></i> @item.sale_end.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge rounded-pill @badgeClass">@statusText</span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm" role="group">
                                        <a href="@Url.Action("Edit", new { id = item.sale_id })" class="btn btn-sm btn-outline-warning" title="Sửa"><i class="bi bi-pencil-square"></i></a>
                                        <a href="@Url.Action("Details", new { id = item.sale_id })" class="btn btn-sm btn-outline-info" title="Chi tiết"><i class="bi bi-eye"></i></a>
                                        <a href="@Url.Action("Delete", new { id = item.sale_id })" class="btn btn-sm btn-outline-danger" title="Xóa"><i class="bi bi-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @*Pagination*@
    <div class="card-footer bg-white d-flex justify-content-between align-items-center py-3">
        <div class="text-muted small">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            (Tổng: @Model.TotalItemCount sản phẩm trong sự kiện giảm giá)
        </div>

        <nav>
            @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page, eventName = ViewBag.CurrentEvent}),
                new PagedListRenderOptions
                {
                    LiElementClasses = new string[] { "page-item" },
                    LinkToPreviousPageFormat = "<i class='bi bi-chevron-left'></i>",
                    LinkToNextPageFormat = "<i class='bi bi-chevron-right'></i>",
                    ClassToApplyToFirstListItemInPager = "page-item",
                    ClassToApplyToLastListItemInPager = "page-item",
                    ContainerDivClasses = new[] { "pagination-container" }
                })
        </nav>
    </div>
</div>