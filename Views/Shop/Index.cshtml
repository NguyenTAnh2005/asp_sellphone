@model old_phone.ViewModels.HomepageViewModel
@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* --- PHẦN 1: BANNER VÀ GIỚI THIỆU (Phần Tĩnh) --- *@
<div class="row d-flex justify-content-evenly align-items-center mb-4 mt-4">
    @* SLide Banner *@
    <div class="col-10 col-xl-7 animate__animated animate__fadeInUp">
        <div class="border border-3 border-light rounded-4 overflow-hidden shadow-sm">
            <div class="carousel slide" id="index_banner" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        @* Ảnh mẫu từ Cloudinary *@
                        <img loading="lazy" src="https://img.freepik.com/premium-psd/mobile-super-discount-banner_987701-6100.jpg?semt=ais_hybrid&w=740&q=80" class="d-block w-100" style="height: 400px; object-fit: cover;" alt="Banner 1">
                    </div>
                    <div class="carousel-item">
                        <img loading="lazy" src="https://img.freepik.com/free-vector/hand-drawn-electronics-store-facebook-template_23-2151138109.jpg?semt=ais_hybrid&w=740&q=80" class="d-block w-100" style="height: 400px; object-fit: cover;" alt="Banner 2">
                    </div>
                    <div class="carousel-item">
                        <img loading="lazy" src="https://d1csarkz8obe9u.cloudfront.net/posterpreviews/smart-phone-banner-design-template-caa98978d25e965873a22b01acb99ba7_screen.jpg?ts=1718877755" class="d-block w-100" style="height: 400px; object-fit: cover;" alt="Banner 2">
                    </div>
                    <div class="carousel-item">
                        <img loading="lazy" src="https://png.pngtree.com/thumb_back/fh260/back_our/20190621/ourmid/pngtree-cool-new-mobile-phone-promotion-purple-banner-image_183067.jpg" class="d-block w-100" style="height: 400px; object-fit: cover;" alt="Banner 2">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-slide="prev" data-bs-target="#index_banner">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-slide="next" data-bs-target="#index_banner">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button>
            </div>
        </div>
    </div>

    @* GT WEB *@
    <div class="col-12 col-xl-4 mt-3 mt-xl-0 d-flex justify-content-center align-items-center animate__animated animate__fadeInUp">
        <div class="card border-2 main-border rounded-4 shadow-sm h-100">
            <div class="card-body text-center">
                <i class="bi bi-emoji-smile-fill text-warning display-1 mb-3"></i>
                <h3 class="fw-semibold text-main-CL mb-3">Welcome to Old Phone!</h3>
                <p class="text-justify">Nơi cung cấp điện thoại chính hãng, giá tốt nhất cho sinh viên. Bảo hành uy tín, hậu mãi tận tâm.</p>
            </div>
        </div>
    </div>
</div>

@* --- PHẦN 2: HOT SALE --- *@
<div class="bg-danger bg-opacity-10 py-5 my-5">
    <div class="container animate__animated animate__fadeInUp">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-danger text-uppercase section-title">
                <i class="bi bi-fire me-2"></i>Khuyến Mãi Cực Sốc
            </h2>
            <p class="text-muted mt-2">Săn deal hời - Giá tốt nhất thị trường</p>
        </div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 row-cols-xl-6 g-4 justify-content-center">
            @if (Model.HotSales != null && Model.HotSales.Any())
            {
                foreach (var item in Model.HotSales)
                {
                    <div class="col hover-lift">
                        @Html.Partial("_SaleCard", item)
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center py-4">
                    <img src="https://cdn-icons-png.flaticon.com/512/4076/4076432.png" width="100" class="mb-3 opacity-50" />
                    <p class="text-muted">Chương trình khuyến mãi đang được cập nhật.</p>
                </div>
            }
        </div>

        <div class="text-center mt-5">
            <a href="@Url.Action("Sales", "Shop", new { filter = "sale" })" class="btn btn-outline-danger rounded-pill px-5 py-2 fw-bold">
                Xem tất cả Deal <i class="bi bi-arrow-right-short fs-5 align-middle"></i>
            </a>
        </div>
    </div>
</div>

@* --- PHẦN 3: SẢN PHẨM NỔI BẬT --- *@
<div class="container py-4 mb-5 animate__animated animate__fadeInUp">
    <div class="d-flex justify-content-between align-items-end mb-4 border-bottom pb-2">
        <div>
            <h2 class="fw-bold text-primary mb-0">
                <i class="bi bi-star-fill text-warning me-2"></i>Sản Phẩm Nổi Bật
            </h2>
            <small class="text-muted">Những mẫu điện thoại được săn đón nhiều nhất</small>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-4">
        @if (Model.FeaturedPhones != null && Model.FeaturedPhones.Any())
        {
            foreach (var item in Model.FeaturedPhones)
            {
                <div class="col hover-lift">
                    @Html.Partial("_VariantCard", item)
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <p class="text-muted">Đang cập nhật sản phẩm...</p>
            </div>
        }
    </div>

    <div class="text-center py-3">
        <a href="@Url.Action("Phones", "Shop")" class="btn btn-outline-primary rounded-pill px-4">
            Xem kho máy <i class="bi bi-phone"></i>
        </a>
    </div>
</div>

@* --- PHẦN 4: BLOG / TIN TỨC --- *@
<div class="bg-light py-5">
    <div class="container animate__animated animate__fadeInUp">
        <div class="text-center mb-5">
            <h2 class="fw-bold text-dark text-uppercase section-title">
                <i class="bi bi-newspaper me-2"></i>Tin Tức Công Nghệ
            </h2>
        </div>

        <div class="row g-4">
            @if (Model.Blogs != null && Model.Blogs.Any())
            {
                foreach (var blog in Model.Blogs)
                {
                    // Giả sử _ArticleCard dùng col bên trong hoặc ta bọc ngoài
                    <div class="col-md-6 col-lg-4 col-xl-3 hover-lift">
                        @Html.Partial("_ArticleCard", blog)
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center text-muted">
                    Chưa có bài viết nào mới.
                </div>
            }
        </div>

        <div class="text-center mt-5">
            <a href="@Url.Action("Blogs", "Shop")" class="btn btn-dark rounded-pill px-5 py-2">
                Đọc thêm tin tức <i class="bi bi-book ms-2"></i>
            </a>
        </div>
    </div>
</div>
