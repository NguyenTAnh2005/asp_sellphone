@using PagedList.Mvc;
@model old_phone.ViewModels.PhonesPageViewModel

@{
    ViewBag.Title = "Danh sách điện thoại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* --- CSS TÙY CHỈNH CHO PHẦN LỌC --- */

    /* 1. Sidebar mặc định trên Desktop (Hiện bình thường) */
    .filter-sidebar {
        transition: all 0.3s ease-in-out;
        z-index: 1040; /* Cao hơn nội dung để đè lên khi ở mobile */
    }

    /* 2. Responsive cho Mobile/Tablet (< 992px) */
    @@media (max-width: 991.98px) {
        .filter-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 280px;
            background: white;
            padding: 20px;
            overflow-y: auto;
            transform: translateX(-100%); /* Ẩn sang trái mặc định */
            box-shadow: 4px 0 15px rgba(0,0,0,0.1);
        }

        /* Class để kích hoạt hiện sidebar */
        .filter-sidebar.show {
            transform: translateX(0);
        }

        /* Lớp phủ đen mờ khi mở menu */
        .filter-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0,0,0,0.5);
            z-index: 1030;
            display: none; /* Mặc định ẩn */
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        .filter-overlay.show {
            display: block;
            opacity: 1;
        }
    }

    /* Style Input & Select đẹp hơn */
    .form-control:focus, .form-select:focus {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        border-color: #86b7fe;
    }
</style>

<div class="container mt-4 mb-5">

    <div class="d-flex justify-content-between align-items-center mb-4 animate__animated animate__fadeInUp">
        <div>
            <h2 class="fw-bold text-primary mb-0"><i class="bi bi-grid-fill me-2"></i> Kho Điện Thoại</h2>
            <p class="text-muted small mb-0">Tìm thấy <span class="fw-bold text-dark">@Model.Phones.TotalItemCount</span> sản phẩm phù hợp</p>
        </div>

        <button class="btn btn-outline-dark d-lg-none rounded-pill fw-bold" type="button" onclick="toggleFilter()">
            <i class="bi bi-funnel-fill me-1"></i> Bộ Lọc
        </button>
    </div>

    <div class="row animate__animated animate__fadeInUp">

        <div id="filterOverlay" class="filter-overlay" onclick="toggleFilter()"></div>

        <div id="filterSidebar" class="col-lg-3 filter-sidebar">

            <div class="d-flex justify-content-between align-items-center mb-4 d-lg-none">
                <h5 class="fw-bold m-0"><i class="bi bi-funnel"></i> Bộ Lọc</h5>
                <button type="button" class="btn-close" onclick="toggleFilter()"></button>
            </div>

            <div class="card border-0 shadow-sm rounded-4 p-4 bg-white h-100">
                <h5 class="fw-bold text-uppercase mb-4 text-primary d-none d-lg-block">
                    <i class="bi bi-funnel-fill me-2"></i> Tìm Kiếm
                </h5>

                <form method="get" action="@Url.Action("Phones", "Shop")">

                    @* 1. Tìm kiếm *@
                    <div class="mb-4">
                        <label class="form-label fw-bold small text-secondary text-uppercase">Từ khóa</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0 rounded-start-pill"><i class="bi bi-search text-muted"></i></span>
                            <input type="text" name="searchQuery" class="form-control border-start-0 rounded-end-pill bg-light"
                                   value="@Model.SearchQuery" placeholder="Tên điện thoại...">
                        </div>
                    </div>

                    @* 2. Hãng sản xuất *@
                    <div class="mb-4">
                        <label class="form-label fw-bold small text-secondary text-uppercase">Hãng sản xuất</label>
                        <select name="companyId" class="form-select rounded-pill bg-light border-0 fw-bold text-dark cursor-pointer">
                            <option value="">Tất cả hãng</option>
                            @foreach (var comp in Model.Companies)
                            {
                                <option value="@comp.company_id" selected="@(comp.company_id == Model.CompanyId)">
                                    @comp.company_name
                                </option>
                            }
                        </select>
                    </div>

                    @* 3. Mức giá *@
                    <div class="mb-4">
                        <label class="form-label fw-bold small text-secondary text-uppercase">Khoảng giá</label>
                        <div class="d-flex gap-2 align-items-center">
                            <input type="number" name="minPrice" class="form-control rounded-pill bg-light border-0 text-center" placeholder="Min" value="@Model.MinPrice">
                            <span class="text-muted">-</span>
                            <input type="number" name="maxPrice" class="form-control rounded-pill bg-light border-0 text-center" placeholder="Max" value="@Model.MaxPrice">
                        </div>
                    </div>

                    @* Accordion cho các thông số kỹ thuật (để gọn hơn) *@
                    <div class="accordion accordion-flush mb-4" id="specAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed py-2 fw-bold small text-secondary text-uppercase bg-transparent shadow-none px-0" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne">
                                    Cấu hình chi tiết
                                </button>
                            </h2>
                            <div id="flush-collapseOne" class="accordion-collapse collapse show">
                                <div class="accordion-body px-0 pt-3">

                                    <div class="mb-3">
                                        <label class="small text-muted mb-1">RAM</label>
                                        <select name="ram" class="form-select form-select-sm rounded-3">
                                            <option value="">Mọi dung lượng</option>
                                            @foreach (var r in Model.RamOptions)
                                            {
                                                <option value="@r" selected="@(r == Model.Ram)">@r GB</option>

                                            }
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label class="small text-muted mb-1">Bộ nhớ trong</label>
                                        <select name="rom" class="form-select form-select-sm rounded-3">
                                            <option value="">Mọi dung lượng</option>
                                            @foreach (var r in Model.RomOptions)
                                            {
                                                <option value="@r" selected="@(r == Model.Rom)">@r GB</option>

                                            }
                                        </select>
                                    </div>

                                    <div class="mb-0">
                                        <label class="small text-muted mb-1">Hệ điều hành</label>
                                        <select name="os" class="form-select form-select-sm rounded-3">
                                            <option value="">Tất cả</option>
                                            @foreach (var o in Model.OsOptions)
                                            {
                                                <option value="@o" selected="@(o == Model.Os)">@o</option>

                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* 7. Sắp xếp *@
                    <div class="mb-4">
                        <label class="form-label fw-bold small text-secondary text-uppercase">Sắp xếp</label>
                        <select name="sort" class="form-select rounded-pill bg-light border-0">
                            <option value="">Mới nhất</option>
                            <option value="price_asc" selected="@(Model.Sort == "price_asc")">Giá tăng dần</option>
                            <option value="price_desc" selected="@(Model.Sort == "price_desc")">Giá giảm dần</option>
                        </select>
                    </div>

                    @* Nút hành động *@
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary rounded-pill fw-bold py-2 shadow-sm">
                            Áp Dụng
                        </button>
                        <a href="@Url.Action("Phones", "Shop")" class="btn btn-link text-decoration-none text-muted small">
                            Xóa bộ lọc
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-lg-9">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 animate__animated animate__fadeInUp">
                @if (Model.Phones != null && Model.Phones.Any())
                {
                    foreach (var item in Model.Phones)
                    {
                        <div class="col">
                            @Html.Partial("_VariantCard", item)
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 animate__animated animate__fadeInUp">
                        <div class="text-center py-5 bg-white rounded-4 shadow-sm h-100">
                            <i class="bi bi-emoji-frown display-1 text-muted opacity-25"></i>
                            <h5 class="mt-3 fw-bold text-secondary">Rất tiếc, không tìm thấy sản phẩm!</h5>
                            <p class="text-muted">Hãy thử thay đổi tiêu chí lọc của bạn.</p>
                            <a href="@Url.Action("Phones", "Shop")" class="btn btn-outline-primary rounded-pill mt-2 px-4">
                                Xem tất cả
                            </a>
                        </div>
                    </div>
                }
            </div>
            <div class="mt-5 d-flex justify-content-center">
                <nav>
                    @Html.PagedListPager(Model.Phones, page => Url.Action("Phones",
                        new
                             {
                            page,
                            search = Model.SearchQuery,
                            companyId = Model.CompanyId,
                            minPrice = Model.MinPrice,
                            maxPrice = Model.MaxPrice,
                            sortOrder = Model.Sort,
                            ram = Model.Ram,
                            rom = Model.Rom,
                            os = Model.Os
                        }),
                        new PagedListRenderOptions
                             {
                            LiElementClasses = new string[] { "page-item" },
                            LinkToPreviousPageFormat = "<i class='bi bi-chevron-left'></i>",
                            LinkToNextPageFormat = "<i class='bi bi-chevron-right'></i>",
                            ClassToApplyToFirstListItemInPager = "page-item",
                            ClassToApplyToLastListItemInPager = "page-item",
                            ContainerDivClasses = new[] { "pagination-container" },
                            UlElementClasses = new[] { "pagination pagination-lg shadow-sm" }
                        }
                    )
                </nav>
            </div>
        </div>
    </div>
</div>

@* --- SCRIPT ĐIỀU KHIỂN TOGGLE --- *@
<script>
    function toggleFilter() {
        var sidebar = document.getElementById('filterSidebar');
        var overlay = document.getElementById('filterOverlay');

        // Thêm/Xóa class 'show' để kích hoạt hiệu ứng CSS
        sidebar.classList.toggle('show');
        overlay.classList.toggle('show');

        // Khóa cuộn trang khi mở menu mobile để trải nghiệm tốt hơn
        if (sidebar.classList.contains('show')) {
            document.body.style.overflow = 'hidden';
        } else {
            document.body.style.overflow = '';
        }
    }
</script>