@model old_phone.Models.Account

@{
    ViewBag.Title = "Xóa Tài Khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white text-center py-4">
                    <i class="bi bi-person-x-fill" style="font-size: 3rem;"></i>
                    <h4 class="fw-bold mt-2">Xóa Tài Khoản Này?</h4>
                    <p class="mb-0 opacity-75">Hành động này không thể hoàn tác.</p>
                </div>

                <div class="card-body p-4 text-center">
                    <h5 class="text-muted mb-3">Bạn sắp xóa:</h5>
                    <h3 class="fw-bold text-dark mb-2">@Model.account_last_name @Model.account_first_name</h3>
                    <p class="text-muted">@Model.account_email</p>
                    <h5 class="text-muted mb-3">Thực chất quá trình này sẽ không xóa ngay, chỉ thay đổi thông tin bảo mật là email và mật khẩu bằng (có kết hợp hash) để tránh mất DL liên quan!</h5>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-4">Hủy bỏ</a>
                            <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold shadow">Xóa ngay</button>
                        </div>
                    }
                </div>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center py-2 mb-3" style="font-size: 0.9rem;">
                        <i class="bi bi-exclamation-triangle-fill me-1"></i> @ViewBag.Error
                    </div>
                }
            </div>
        </div>
    </div>
</div>