@model PagedList.IPagedList<old_phone.Models.Account>
@using PagedList.Mvc

@{
    ViewBag.Title = "Quản Lý Tài Khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0"><i class="bi bi-people-fill me-2"></i> Danh Sách Nhân Sự</h2>
            <p class="text-muted small mb-0">Quản lý tài khoản Admin và User</p>
        </div>
        @Html.ActionLink("Thêm Tài Khoản", "Create", null, new { @class = "btn btn-success rounded-pill px-4 fw-bold shadow-sm" })
    </div>
    @*Lọc, TÌm kiếm*@
    <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white">
        <div class="card-body p-3">
            @using (Html.BeginForm("Index", "ManageAccounts", FormMethod.Get))
            {
                <div class="row g-3 align-items-center">
                    <div class="col-md-3">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-search text-muted"></i></span>
                            @Html.TextBox("acc_name", ViewBag.CurrentNameFilter as string, new { @class = "form-control border-start-0 bg-light", placeholder = "Tìm theo tên tài khoản" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-search text-muted"></i></span>
                            @Html.TextBox("acc_email", ViewBag.CurrentEmailFilter as string, new { @class = "form-control border-start-0 bg-light", placeholder = "Tìm theo email" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 fw-bold text-muted">Quyền</span>
                            @Html.DropDownList("role_id", ViewBag.RoleList as SelectList, "--- Tất cả ---", new { @class = "form-select bg-light border-start-0" })
                        </div>
                    </div>
                    <div class="col-md-2 text-end">
                        <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold"><i class="bi bi-funnel-fill me-1"></i> Lọc</button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-3"><i class="bi bi-arrow-counterclockwise"></i></a>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="card shadow border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="bg-light text-uppercase small fw-bold text-secondary">
                        <tr>
                            <th class="ps-4">Họ Tên</th>
                            <th>Email</th>
                            <th class="text-center">Giới Tính</th>
                            <th>Ngày Sinh</th>
                            <th>Vai Trò</th>
                            <th class="text-end pe-4">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">@item.account_last_name @item.account_first_name</div>
                                </td>
                                <td>
                                    <span class="text-muted">@item.account_email</span>
                                </td>
                                <td class="text-center">
                                    @if (item.account_gender)
                                    {
                                        <div class="fw-semibold" style="color:dodgerblue">Nam</div>
                                    }
                                    else
                                    {
                                        <div class="fw-semibold" style="color:deeppink">Nữ</div>

                                    }
                                </td>
                                <td>@item.account_date.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (item.Role.role_name == "Admin")
                                    {
                                        <span class="badge bg-danger"><i class="bi bi-shield-fill"></i> Admin</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info text-dark">User</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm">
                                        <a href="@Url.Action("Edit", new { id = item.account_id })" class="btn btn-sm btn-outline-warning" title="Sửa"><i class="bi bi-pencil-square"></i></a>
                                        <a href="@Url.Action("Details", new { id = item.account_id })" class="btn btn-sm btn-outline-info" title="Chi tiết"><i class="bi bi-eye"></i></a>
                                        <a href="@Url.Action("Delete", new { id = item.account_id })" class="btn btn-sm btn-outline-danger" title="Xóa"><i class="bi bi-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @*Pagination*@
    <div class="card-footer bg-white d-flex justify-content-between align-items-center py-3">
        <div class="text-muted small">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            (Tổng: @Model.TotalItemCount tài khoản được tìm thấy)
        </div>

        <nav>
            @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page, acc_name = ViewBag.CurrentNameFilter, acc_email = ViewBag.CurrentEmailFilter, role_id = ViewBag.RoleList }),
                new PagedListRenderOptions
                {
                    LiElementClasses = new string[] { "page-item" },
                    LinkToPreviousPageFormat = "<i class='bi bi-chevron-left'></i>",
                    LinkToNextPageFormat = "<i class='bi bi-chevron-right'></i>",
                    ClassToApplyToFirstListItemInPager = "page-item",
                    ClassToApplyToLastListItemInPager = "page-item",
                    ContainerDivClasses = new[] { "pagination-container" }
                })
        </nav>
    </div>
</div>