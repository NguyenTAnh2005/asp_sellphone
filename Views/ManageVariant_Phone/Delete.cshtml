@model old_phone.Models.Variant_Phone

@{
    ViewBag.Title = "Xóa Biến Thể";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white text-center py-4">
                    <i class="bi bi-trash3-fill" style="font-size: 3rem;"></i>
                    <h4 class="fw-bold mt-2">Xác Nhận Xóa?</h4>
                    <p class="mb-0 opacity-75">Hành động này không thể hoàn tác.</p>
                </div>

                <div class="card-body p-4 text-center">
                    <h5 class="text-muted mb-3">Bạn sắp xóa phiên bản:</h5>
                    <h5 class="text-muted mb-3">Thực chất là set sô lượng tồn kho = 0  </h5>
                    <div class="bg-light p-3 rounded-3 mb-4 border text-start d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(Model.variant_ph_img))
                        {
                            <img src="@Model.variant_ph_img" class="rounded me-3 border" style="width: 60px; height: 60px; object-fit: cover;">
                        }
                        <div>
                            <h5 class="fw-bold text-dark mb-0">@Model.Product.product_name</h5>
                            <small class="text-muted">
                                @Model.variant_ph_color - @Model.variant_ph_ram/@Model.variant_ph_rom GB
                            </small>
                            <div class="fw-bold text-danger mt-1">@Model.variant_ph_final_price.ToString("N0") đ</div>
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="bi bi-x-lg me-1"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold shadow">
                                <i class="bi bi-trash-fill me-1"></i> Xóa ngay
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>