@model old_phone.Models.Blog

@{
    ViewBag.Title = "Đăng Tin Mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-success text-white text-center py-3">
                    <h4 class="fw-bold mb-0"><i class="bi bi-pen-fill me-2"></i> Đăng Tin Tức Mới</h4>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                            <div class="mb-3">
                                <label class="form-label fw-bold">Tiêu Đề Bài Viết</label>
                                @Html.EditorFor(model => model.blog_name, new { htmlAttributes = new { @class = "form-control rounded-3", placeholder = "Nhập tiêu đề bài viết..." } })
                                @Html.ValidationMessageFor(model => model.blog_name, "", new { @class = "text-danger small mt-1" })
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Tác Giả</label>
                                    @Html.EditorFor(model => model.blog_author, new { htmlAttributes = new { @class = "form-control rounded-3", placeholder = "Tên người viết" } })
                                    @Html.ValidationMessageFor(model => model.blog_author, "", new { @class = "text-danger small mt-1" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Ngày Đăng</label>
                                    @Html.EditorFor(model => model.blog_time, new { htmlAttributes = new { @class = "form-control rounded-3", type = "date" } })
                                    @Html.ValidationMessageFor(model => model.blog_time, "", new { @class = "text-danger small mt-1" })
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Link Bài Viết (Nguồn)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-link-45deg"></i></span>
                                    @Html.EditorFor(model => model.blog_link, new { htmlAttributes = new { @class = "form-control", placeholder = "https://..." } })
                                </div>
                                @Html.ValidationMessageFor(model => model.blog_link, "", new { @class = "text-danger small mt-1" })
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">Link Hình Ảnh (URL)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-image"></i></span>
                                    @Html.EditorFor(model => model.blog_img, new { htmlAttributes = new { @class = "form-control", placeholder = "https://...jpg" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.blog_img, "", new { @class = "text-danger small mt-1" })
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-4 border-top pt-3">
                                <a href="@Url.Action("Index")" class="btn btn-light rounded-pill px-4 fw-bold border">
                                    <i class="bi bi-arrow-left me-1"></i> Quay lại
                                </a>
                                <button type="submit" class="btn btn-success rounded-pill px-4 fw-bold shadow-sm">
                                    <i class="bi bi-upload me-1"></i> Đăng Bài
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}