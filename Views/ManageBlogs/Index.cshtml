@model PagedList.IPagedList<old_phone.Models.Blog>
@using PagedList.Mvc
@{
    ViewBag.Title = "Quản Lý Bài viết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="bi bi-newspaper me-2"></i> Danh Sách Bài Viết </h2>
        @Html.ActionLink("Viết Bài Mới", "Create", null, new { @class = "btn btn-success rounded-pill px-4 fw-bold shadow-sm" })
    </div>

    <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white">
        <div class="card-body p-3">
            @using (Html.BeginForm("Index", "ManageBlogs", FormMethod.Get))
            {
                <div class="row g-3 align-items-center">
                    <div class="col-md-5">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-search text-muted"></i></span>
                            @Html.TextBox("searchQuery", ViewBag.CurrentSearchQuery as string, new { @class = "form-control border-start-0 bg-light", placeholder = "Tìm theo tên bài viết..." })
                        </div>
                    </div>
                    <div class="col-md-3 text-end">
                        <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold"><i class="bi bi-funnel-fill me-1"></i> Lọc</button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-3"><i class="bi bi-arrow-counterclockwise"></i></a>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="card shadow border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="bg-light text-uppercase small fw-bold text-muted">
                        <tr>
                            <th class="ps-4" style="width: 100px;">Hình Ảnh</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().blog_name)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().blog_author)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().blog_time)</th>
                            <th class="text-end pe-4" style="width: 180px;">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    @* Hiển thị ảnh thu nhỏ nếu có link, nếu không hiện icon mặc định *@
                                    @if (!string.IsNullOrEmpty(item.blog_img))
                                    {
                                        <img src="@item.blog_img" alt="Blog Img" class="rounded-3 shadow-sm" style="width: 60px; height: 60px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded-3 d-flex align-items-center justify-content-center text-secondary" style="width: 60px; height: 60px;">
                                            <i class="bi bi-image"></i>
                                        </div>
                                    }
                                </td>
                                <td class="fw-bold text-dark text-wrap" style="max-width: 300px;">
                                    @Html.DisplayFor(modelItem => item.blog_name)
                                </td>
                                <td class="text-secondary small">
                                    <i class="bi bi-person-circle me-1"></i> @Html.DisplayFor(modelItem => item.blog_author)
                                </td>
                                <td class="text-muted small">
                                    @if (item.blog_time != null)
                                    {
                                        @item.blog_time.ToString("dd/MM/yyyy")
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm" role="group">
                                        <a href="@Url.Action("Edit", new { id = item.blog_id })" class="btn btn-sm btn-outline-primary" title="Sửa">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a href="@Url.Action("Details", new { id = item.blog_id })" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.blog_id })" class="btn btn-sm btn-outline-danger" title="Xóa">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card-footer bg-white d-flex justify-content-between align-items-center py-3">
        <div class="text-muted small">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            (Tổng: @Model.TotalItemCount bài viết)
        </div>

        <nav>
            @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page, searchQuery = ViewBag.CurrentSearchQuery}),
                new PagedListRenderOptions
                {
                    LiElementClasses = new string[] { "page-item" },
                    LinkToPreviousPageFormat = "<i class='bi bi-chevron-left'></i>",
                    LinkToNextPageFormat = "<i class='bi bi-chevron-right'></i>",
                    ClassToApplyToFirstListItemInPager = "page-item",
                    ClassToApplyToLastListItemInPager = "page-item",
                    ContainerDivClasses = new[] { "pagination-container" }
                })
        </nav>
    </div>
</div>