@model old_phone.Models.Blog

@{
    ViewBag.Title = "Xóa Tin Tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white text-center py-4">
                    <i class="bi bi-trash3-fill" style="font-size: 3rem;"></i>
                    <h4 class="fw-bold mt-2">Xác Nhận Xóa?</h4>
                    <p class="mb-0 opacity-75">Hành động này không thể hoàn tác.</p>
                </div>

                <div class="card-body p-4 text-center">
                    <h5 class="text-secondary mb-4">Bạn có chắc chắn muốn xóa bài viết này không?</h5>

                    <div class="bg-light p-3 rounded-3 text-start mb-4 border-start border-4 border-danger">
                        <p class="mb-1 small text-muted fw-bold text-uppercase">Tiêu đề bài viết:</p>
                        <h5 class="fw-bold text-dark mb-2">@Html.DisplayFor(model => model.blog_name)</h5>

                        <div class="d-flex justify-content-between small text-secondary">
                            <span><i class="bi bi-person me-1"></i> @Html.DisplayFor(model => model.blog_author)</span>
                            <span><i class="bi bi-calendar me-1"></i> @Model.blog_time.ToString("dd/MM/yyyy")</span>
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-center gap-3">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="bi bi-x-lg me-1"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold shadow">
                                <i class="bi bi-trash-fill me-1"></i> Xóa ngay
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>