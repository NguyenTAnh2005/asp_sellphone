@model IEnumerable<old_phone.Models.Cart>

@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-danger text-uppercase">
            <i class="bi bi-bag-heart-fill"></i> Giỏ hàng của tôi
        </h3>
        <span class="text-muted">@Model.Count() sản phẩm</span>
    </div>

    @if (Model.Count() > 0)
    {
        // *** FORM GỬI API về Controller ***
        <form id="cartForm" method="post" action="@Url.Action("ProceedToCheckout", "Carts")">
            @Html.AntiForgeryToken()

            <div class="row g-4">
                @{ int i = 0; }
                @foreach (var item in Model)
                {
                    <div class="col-12 col-lg-6">
                        <div class="card border-0 shadow-sm rounded-4 h-100 p-2 hover-shadow transition-all">
                            <div class="card-body d-flex align-items-center">
                                @* Dữ liệu input gửi sang controller *@
                                <div class="form-check me-3">
                                    <input class="form-check-input border-2 scale-125"
                                           type="checkbox" name="selectedItems" value="@item.cart_id">
                                </div>

                                <div class="flex-shrink-0 border rounded-3 p-2 bg-white">
                                    <img src="@item.Variant_Phone.variant_ph_img"
                                         alt="@item.Variant_Phone.Product.product_name"
                                         style="width: 80px; height: 80px; object-fit: contain;">
                                </div>

                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-bold mb-1 text-truncate-2">
                                        <a href="@Url.Action("ProductDetails", "Shop", new { id = item.variant_id })" class="text-decoration-none text-dark">
                                            @item.Variant_Phone.Product.product_name
                                        </a>
                                    </h6>

                                    <small class="text-muted d-block mb-2">
                                        @item.Variant_Phone.variant_ph_ram GB / @item.Variant_Phone.variant_ph_rom GB • @item.Variant_Phone.variant_ph_color
                                    </small>
                                    <div class="d-flex justify-content-between align-items-end">
                                        <div class="input-group input-group-sm" style="width: 100px;">
                                            @* Nút Trừ *@
                                            <button class="btn btn-outline-danger btn-sm fw-bold" type="button" onclick="updateQty(this, -1)">-</button>

                                            @* Input số lượng (chúng ta không cần gửi cái này khi checkout, nhưng vẫn cần cho hàm updateQty) *@
                                            <input type="hidden" name="carts[@i].cart_id" value="@item.cart_id" />
                                            <input type="text" class="form-control text-center fw-bold text-danger border-danger bg-white"
                                                   name="carts[@i].cart_count" value="@item.cart_count" data-cart-id="@item.cart_id" readonly>

                                            @* Nút Cộng *@
                                            <button class="btn btn-outline-danger btn-sm fw-bold" type="button" onclick="updateQty(this, 1)">+</button>
                                        </div>

                                        <span class="fw-bold text-danger fs-5">
                                            @string.Format("{0:N0} đ", item.Variant_Phone.variant_ph_final_price)
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    i++;
                }
            </div>
        </form>
        @* --- THANH CÔNG CỤ PHÍA DƯỚI --- *@
        <div class="fixed-bottom bg-white shadow-lg border-top py-3 animate__animated animate__fadeInUp" style="z-index: 1000;">
            <div class="container">
                <div class="d-flex justify-content-end align-items-center gap-2">
                    <button type="button" class="btn btn-outline-danger rounded-3 fw-bold px-4" onclick="deleteSelected()">
                        Xóa
                    </button>
                    <button type="button" class="btn btn-success rounded-3 fw-bold px-4 text-white" onclick="saveQuantityChanges()">
                        Lưu thay đổi số lượng
                    </button>
                    <button type="button" class="btn btn-danger rounded-3 fw-bold px-5 shadow-sm" onclick="checkoutSelected()">
                        Mua ngay
                    </button>
                </div>
            </div>
        </div>
    }
    else
    {
    @* HIỂN THỊ KHI GIỎ TRỐNG *@
    <div class="text-center py-5">
        <img src="https://cdn-icons-png.flaticon.com/512/11329/11329060.png" alt="Empty" style="width: 150px; opacity: 0.5;">
        <h4 class="mt-3 text-muted fw-bold">Giỏ hàng trống trơn</h4>
        <a href="@Url.Action("Index", "Shop")" class="btn btn-danger rounded-pill mt-3 px-4">
            <i class="bi bi-arrow-left"></i> Mua sắm ngay
        </a>
    </div>
    }
</div>

@* --- SCRIPT XỬ LÝ NÚT CỘNG TRỪ --- *@
<script>
    function updateQty(btn, change) {
        var input = btn.parentElement.querySelector('input[type="text"]');
        var currentVal = parseInt(input.value);
        var newVal = currentVal + change;

        if (newVal >= 1) {
            input.value = newVal;
        }
    }
    // Hàm lưu thay đổi số lượng - JSON API
    async function saveQuantityChanges() {
        // Lấy tất cả các cart item
        var cartItems = [];
        var cartIdInputs = document.querySelectorAll('input[name*=".cart_id"]');

        cartIdInputs.forEach((idInput, index) => {
            var countInput = document.querySelector('input[name*="[' + index + '].cart_count"]');
            if (countInput) {
                cartItems.push({
                    cart_id: parseInt(idInput.value),
                    cart_count: parseInt(countInput.value)
                });
            }
        });

        if (cartItems.length === 0) {
            alert("Không có sản phẩm nào để cập nhật!");
            return;
        }

        try {
            const response = await fetch('/Carts/UpdateCountJS', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ carts: cartItems })
            });

            if (!response.ok) {
                throw new Error("Lỗi mạng hoặc server!");
            }

            const data = await response.json();

            if (data.requireLogin) {
                alert(data.message);
                window.location.href = "/Account/Login";
                return;
            }

            if (data.success) {
                alert(data.message);
                window.location.reload();
            } else {
                alert(data.message);
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Có lỗi xảy ra, vui lòng thử lại!');
        }
    }
    async function deleteSelected() {
        var listChecked = document.querySelectorAll('input[name="selectedItems"]:checked');
        if (listChecked.length === 0) {
            alert("Vui lòng chọn sản phẩm để xóa!");
            return;
        }

        if (!confirm("Bạn có chắc chắn muốn xóa các sản phẩm này khỏi giỏ hàng?")) {
            return;
        }

        // Lấy danh sách ID
        var selectedIds = Array.from(listChecked).map(cb => parseInt(cb.value));

        // Tạo FormData
        var formData = new FormData();
        selectedIds.forEach(id => {
            formData.append('selectedItems', id);
        });

        try {
            const response = await fetch('/Carts/DeleteCartJS', {
                method: 'POST',
                body: formData
            });

            if (!response.ok) {
                throw new Error("Lỗi mạng hoặc server!");
            }

            const data = await response.json();

            if (data.requireLogin) {
                alert(data.message);
                window.location.href = "/Account/Login";
                return;
            }

            if (data.success) {
                alert(data.message);
                // Reload trang để cập nhật giỏ hàng
                window.location.reload();
            } else {
                alert(data.message);
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Có lỗi xảy ra, vui lòng thử lại!');
        }
    }
    function checkoutSelected() {
    var listChecked = document.querySelectorAll('input[name="selectedItems"]:checked');
    if (listChecked.length === 0) {
        alert("Vui lòng chọn ít nhất một sản phẩm để thanh toán!");
        return;
    }

    var form = document.getElementById("cartForm");

    form.action = "@Url.Action("ProceedToCheckout", "Carts")";

    // Submit form. Chỉ các input: checkbox đã check (selectedItems) và Anti-Forgery Token sẽ được gửi đi.
    form.submit();
}
</script>