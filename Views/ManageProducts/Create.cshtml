@model old_phone.Models.Product

@{
    ViewBag.Title = "Thêm Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-success text-white py-3">
                    <h4 class="fw-bold mb-0 text-center"><i class="bi bi-plus-circle-dotted me-2"></i> Thêm Sản Phẩm Mới</h4>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                            <div class="mb-4">
                                <label class="form-label fw-bold text-secondary">Tên Sản Phẩm</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-phone"></i></span>
                                    @Html.EditorFor(model => model.product_name, new { htmlAttributes = new { @class = "form-control", placeholder = "Ví dụ: iPhone 15 Pro Max" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.product_name, "", new { @class = "text-danger small mt-1" })
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold text-secondary">Hãng Sản Xuất</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-building"></i></span>
                                    @Html.DropDownList("company_id", null, htmlAttributes: new { @class = "form-select" })
                                </div>
                                @Html.ValidationMessageFor(model => model.company_id, "", new { @class = "text-danger small mt-1" })
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold text-secondary">Mô Tả Chi Tiết</label>
                                @Html.TextAreaFor(model => model.product_desc, new { @class = "form-control", rows = 5, placeholder = "Nhập mô tả sản phẩm..." })
                                @Html.ValidationMessageFor(model => model.product_desc, "", new { @class = "text-danger small mt-1" })
                            </div>

                            <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                                <a href="@Url.Action("Index")" class="btn btn-light border rounded-pill px-4 fw-bold">
                                    <i class="bi bi-arrow-left me-1"></i> Quay lại
                                </a>
                                <button type="submit" class="btn btn-success rounded-pill px-4 fw-bold shadow-sm">
                                    <i class="bi bi-save me-1"></i> Lưu Sản Phẩm
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}