@model PagedList.IPagedList<old_phone.Models.Product>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Quản Lý Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0"><i class="bi bi-phone-fill me-2"></i> Danh Sách Sản Phẩm</h2>
            <p class="text-muted small mb-0">Quản lý thông tin điện thoại và thiết bị</p>
        </div>
        @Html.ActionLink("Thêm Sản Phẩm Mới", "Create", null, new { @class = "btn btn-success rounded-pill px-4 fw-bold shadow-sm" })
    </div>

    <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white">
        <div class="card-body p-3">
            @using (Html.BeginForm("Index", "ManageProducts", FormMethod.Get))
            {
                <div class="row g-3 align-items-center">
                    <div class="col-md-5">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-search text-muted"></i></span>
                            @Html.TextBox("searchQuery", ViewBag.CurrentSearchQuery as string, new { @class = "form-control border-start-0 bg-light", placeholder = "Tìm theo tên sản phẩm..." })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 fw-bold text-muted">Hãng:</span>
                            @Html.DropDownList("companyId", ViewBag.CompanyList as SelectList, "--- Tất cả hãng ---", new { @class = "form-select bg-light border-start-0" })
                        </div>
                    </div>
                    <div class="col-md-3 text-end">
                        <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold"><i class="bi bi-funnel-fill me-1"></i> Lọc</button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-3"><i class="bi bi-arrow-counterclockwise"></i></a>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="card shadow border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="bg-light text-uppercase small fw-bold text-secondary">
                        <tr>
                            <th class="ps-4 py-3">Tên Sản Phẩm</th>
                            <th>Hãng Sản Xuất</th>
                            <th style="width: 40%;">Mô Tả</th>
                            <th class="text-end pe-4" style="width: 150px;">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-dark">
                                    @Html.DisplayFor(modelItem => item.product_name)
                                </td>
                                <td>
                                    <span class="badge bg-info text-dark rounded-pill px-3">
                                        @Html.DisplayFor(modelItem => item.Company.company_name)
                                    </span>
                                </td>
                                <td class="text-muted small">
                                    @* Cắt ngắn mô tả để không làm vỡ bảng *@
                                    <div class="text-truncate" style="max-width: 400px;" title="@item.product_desc">
                                        @Html.DisplayFor(modelItem => item.product_desc)
                                    </div>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm" role="group">
                                        <a href="@Url.Action("Edit", new { id = item.product_id })" class="btn btn-sm btn-outline-warning" title="Sửa">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a href="@Url.Action("Details", new { id = item.product_id })" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.product_id })" class="btn btn-sm btn-outline-danger" title="Xóa">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card-footer bg-white d-flex justify-content-between align-items-center py-3">
        <div class="text-muted small">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            (Tổng: @Model.TotalItemCount sản phẩm)
        </div>

        <nav>
            @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page, searchQuery = ViewBag.CurrentSeachQuery, companyId = ViewBag.CurrentCompanyId }),
                new PagedListRenderOptions
                {
                    LiElementClasses = new string[] { "page-item" },
                    LinkToPreviousPageFormat = "<i class='bi bi-chevron-left'></i>",
                    LinkToNextPageFormat = "<i class='bi bi-chevron-right'></i>",
                    ClassToApplyToFirstListItemInPager = "page-item",
                    ClassToApplyToLastListItemInPager = "page-item",
                    ContainerDivClasses = new[] { "pagination-container" }
                })
        </nav>
    </div>
</div>