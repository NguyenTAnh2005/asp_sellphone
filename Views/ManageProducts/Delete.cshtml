@model old_phone.Models.Product

@{
    ViewBag.Title = "Xóa Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7">

            @* Khu vực hiển thị thông báo lỗi (nếu có lỗi FK từ Controller) *@
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger shadow-sm mb-4">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.ErrorMessage
                </div>
            }

            <div class="card border-danger shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white text-center py-4">
                    <i class="bi bi-trash3-fill" style="font-size: 3rem;"></i>
                    <h3 class="fw-bold mt-2">Xóa Sản Phẩm?</h3>
                    <p class="mb-0 opacity-75">Hành động này không thể hoàn tác!</p>
                </div>

                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h5 class="text-muted">Bạn sắp xóa sản phẩm:</h5>
                        <h2 class="fw-bold text-danger">@Html.DisplayFor(model => model.product_name)</h2>
                        <span class="badge bg-light text-dark border mt-2">@Html.DisplayFor(model => model.Company.company_name)</span>
                    </div>

                    <div class="bg-light p-3 rounded-3 mb-4 border small">
                        <strong>Mô tả:</strong> <span class="text-muted">@Html.DisplayFor(model => model.product_desc)</span>

                        @if (Model.Phone != null)
                        {
                            <br /><strong>Chipset:</strong> <span class="text-muted">@Html.DisplayFor(model => model.Phone.phone_chip)</span>
                        }
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-center gap-3">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="bi bi-x-lg me-1"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold shadow">
                                <i class="bi bi-trash-fill me-1"></i> Xác nhận xóa
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>