@model old_phone.Models.Company

@{
    ViewBag.Title = "Cập Nhật Hãng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-warning text-dark text-center py-3">
                    <h4 class="fw-bold mb-0"><i class="bi bi-pencil-square me-2"></i> Cập Nhật Thông Tin</h4>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                            @Html.HiddenFor(model => model.company_id)

                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Tên Hãng</label>
                                @Html.EditorFor(model => model.company_name, new { htmlAttributes = new { @class = "form-control rounded-3" } })
                                @Html.ValidationMessageFor(model => model.company_name, "", new { @class = "text-danger small mt-1" })
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold text-muted">Mô Tả</label>
                                @Html.EditorFor(model => model.company_desc, new { htmlAttributes = new { @class = "form-control rounded-3" } })
                                @Html.ValidationMessageFor(model => model.company_desc, "", new { @class = "text-danger small mt-1" })
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a href="@Url.Action("Index")" class="btn btn-light rounded-pill px-4 fw-bold">
                                    <i class="bi bi-arrow-left me-1"></i> Hủy
                                </a>
                                <button type="submit" class="btn btn-warning rounded-pill px-4 fw-bold shadow-sm">
                                    <i class="bi bi-check-lg me-1"></i> Cập nhật
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>