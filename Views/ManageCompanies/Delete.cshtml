@model old_phone.Models.Company

@{
    ViewBag.Title = "Xóa Hãng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            @* Hiển thị lỗi nếu không xóa được *@
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger rounded-3 shadow-sm mb-4">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.ErrorMessage
                </div>
            }

            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white text-center py-4">
                    <i class="bi bi-trash3-fill" style="font-size: 3rem;"></i>
                    <h4 class="fw-bold mt-2">Xác Nhận Xóa?</h4>
                    <p class="mb-0 opacity-75">Hành động này không thể hoàn tác.</p>
                </div>

                <div class="card-body p-4 text-center">
                    <h5 class="text-muted mb-3">Bạn có chắc muốn xóa hãng này?</h5>

                    <div class="bg-light p-3 rounded-3 d-inline-block text-start mb-4" style="min-width: 200px;">
                        <p class="mb-1"><small class="text-muted fw-bold">TÊN HÃNG:</small></p>
                        <h4 class="fw-bold text-danger mb-0">@Html.DisplayFor(model => model.company_name)</h4>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-center gap-3">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="bi bi-x-lg me-1"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold shadow">
                                <i class="bi bi-trash-fill me-1"></i> Xóa ngay
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>