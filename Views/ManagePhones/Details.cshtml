@model old_phone.Models.Phone

@{
    ViewBag.Title = "Chi Tiết Cấu Hình";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-info text-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0"><i class="bi bi-phone me-2"></i> Thông Số Kỹ Thuật</h5>
                    <span class="badge bg-light text-dark fs-6">@Html.DisplayFor(model => model.Product.product_name)</span>
                </div>

                <div class="card-body p-0">
                    <table class="table table-striped table-hover mb-0">
                        <tbody>
                            <tr>
                                <th class="ps-4 py-3 w-25 text-secondary"><i class="bi bi-cpu me-2"></i> Chipset</th>
                                <td class="fw-bold">@Html.DisplayFor(model => model.phone_chip)</td>
                            </tr>
                            <tr>
                                <th class="ps-4 py-3 text-secondary"><i class="bi bi-display me-2"></i> Màn hình</th>
                                <td>@Html.DisplayFor(model => model.phone_screen_size)</td>
                            </tr>
                            <tr>
                                <th class="ps-4 py-3 text-secondary"><i class="bi bi-camera me-2"></i> Cam trước</th>
                                <td>@Html.DisplayFor(model => model.phone_front_cam)</td>
                            </tr>
                            <tr>
                                <th class="ps-4 py-3 text-secondary"><i class="bi bi-camera-fill me-2"></i> Cam sau</th>
                                <td>@Html.DisplayFor(model => model.phone_behind_cam)</td>
                            </tr>
                            <tr>
                                <th class="ps-4 py-3 text-secondary"><i class="bi bi-battery-half me-2"></i> Pin & Sạc</th>
                                <td>@Html.DisplayFor(model => model.phone_battery) mAh - @Html.DisplayFor(model => model.phone_charging_port)</td>
                            </tr>
                            <tr>
                                <th class="ps-4 py-3 text-secondary"><i class="bi bi-robot me-2"></i> Hệ điều hành</th>
                                <td>@Html.DisplayFor(model => model.phone_system)</td>
                            </tr>
                            <tr>
                                <th class="ps-4 py-3 text-secondary"><i class="bi bi-sim me-2"></i> Kết nối</th>
                                <td>
                                    Sim: @Html.DisplayFor(model => model.phone_sim_card) <br />
                                    NFC: @(Model.phone_nfc ? "Có" : "Không") <br />
                                    Thẻ nhớ: @(Model.phone_memory_card ? "Có" : "Không")
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="card-footer bg-white p-3 text-end">
                    <a href="@Url.Action("Index")" class="btn btn-light border rounded-pill px-4">
                        <i class="bi bi-arrow-left me-1"></i> Quay lại
                    </a>
                    <a href="@Url.Action("Edit", new { id = Model.product_id })" class="btn btn-warning rounded-pill px-4 fw-bold shadow-sm">
                        <i class="bi bi-pencil-square me-1"></i> Chỉnh sửa
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>