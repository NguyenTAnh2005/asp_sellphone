@model old_phone.Models.Phone

@{
    ViewBag.Title = "Xóa Cấu Hình";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-danger text-white text-center py-4">
                    <i class="bi bi-trash3-fill" style="font-size: 3rem;"></i>
                    <h4 class="fw-bold mt-2">Xác Nhận Xóa Cấu Hình?</h4>
                    <p class="mb-0 opacity-75">Dữ liệu kỹ thuật của sản phẩm này sẽ bị mất vĩnh viễn.</p>
                </div>

                <div class="card-body p-4 text-center">
                    <h5 class="text-muted mb-3">Sản phẩm bị ảnh hưởng:</h5>
                    <h3 class="fw-bold text-danger mb-4">@Html.DisplayFor(model => model.Product.product_name)</h3>

                    <div class="bg-light p-3 rounded-3 border text-start d-inline-block" style="min-width: 250px;">
                        <ul class="list-unstyled mb-0 small text-secondary">
                            <li><i class="bi bi-cpu me-2"></i> @Html.DisplayFor(model => model.phone_chip)</li>
                            <li><i class="bi bi-display me-2"></i> @Html.DisplayFor(model => model.phone_screen_size)</li>
                            <li><i class="bi bi-battery me-2"></i> @Html.DisplayFor(model => model.phone_battery) mAh</li>
                        </ul>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="bi bi-x-lg me-1"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold shadow">
                                <i class="bi bi-trash-fill me-1"></i> Xóa ngay
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>