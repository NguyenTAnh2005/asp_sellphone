@model List<old_phone.ViewModels.OrderHistoryViewModel>

@{
    ViewBag.Title = "Lịch Sử Đơn Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Hiệu ứng nổi lên khi di chuột vào đơn hàng */
    .order-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: 1px solid #f0f0f0;
    }

        .order-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.05) !important;
            border-color: #dee2e6;
        }

    .status-badge {
        font-size: 0.85rem;
        padding: 0.5em 1em;
    }
</style>

<div class="container py-5">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-5">
        <div class="mb-3 mb-md-0 animate__animated animate__fadeInUp">
            <h3 class="fw-bold text-uppercase text-primary mb-1">
                <i class="bi bi-clock-history me-2"></i> Lịch Sử Đơn Hàng
            </h3>
            <p class="text-muted mb-0">Theo dõi trạng thái và lịch sử mua sắm của bạn.</p>
        </div>

        <div class="card border-0 shadow-sm rounded-4 bg-white animate__animated animate__fadeInDown" style="min-width: 300px;">
            <div class="card-body p-2">
                @using (Html.BeginForm("History", "Order", FormMethod.Get, new { id = "filterForm", @class = "d-flex align-items-center" }))
                {
                    <label class="fw-bold me-2 text-secondary small text-nowrap ps-2">
                        <i class="bi bi-funnel-fill"></i> Trạng thái:
                    </label>
                    @Html.DropDownList("status", ViewBag.StatusList as SelectList, new
                    {
                        @class = "form-select border-0 bg-light fw-bold text-dark rounded-pill",
                        @onchange = "this.form.submit();",
                        @style = "cursor: pointer;"
                    })
                }
            </div>
        </div>
    </div>

    <hr class="text-muted opacity-25 mb-4" />

    @if (Model != null && Model.Any())
    {
        <div class="row g-4 animate__animated animate__fadeInUp">
            @foreach (var order in Model)
            {
                // 1. XỬ LÝ LOGIC MÀU SẮC & TRẠNG THÁI
                string badgeClass = "bg-secondary";
                string stateText = "Không xác định";
                string iconState = "bi-question-circle";

                switch (order.order_state)
                {
                    case 0:
                        badgeClass = "bg-warning text-dark";
                        stateText = "Chờ xác nhận";
                        iconState = "bi-hourglass-split";
                        break;
                    case 1:
                        badgeClass = "bg-info text-dark";
                        stateText = "Đang chuẩn bị";
                        iconState = "bi-box-seam";
                        break;
                    case 2:
                        badgeClass = "bg-primary";
                        stateText = "Đang giao hàng";
                        iconState = "bi-truck";
                        break;
                    case 3:
                        badgeClass = "bg-success";
                        stateText = "Giao thành công";
                        iconState = "bi-check-circle-fill";
                        break;
                    case 4:
                        badgeClass = "bg-danger";
                        stateText = "Đã hủy";
                        iconState = "bi-x-circle-fill";
                        break;
                }

                // 2. XỬ LÝ LOGIC HIỂN THỊ TEXT THANH TOÁN (Sửa lỗi CS0127)
                string paymentText = "Không xác định";
                switch (order.order_type_pay)
                {
                    case "COD": paymentText = "COD - Thanh toán khi nhận hàng"; break;
                    case "QR": paymentText = "Banking - Chuyển khoản trước"; break;
                    default: paymentText = order.order_type_pay; break;
                }

                <div class="col-12">
                    <div class="card order-card shadow-sm rounded-4 h-100">
                        <div class="card-header bg-white border-bottom-0 d-flex flex-wrap justify-content-between align-items-center py-3">
                            <div>
                                <span class="badge bg-light text-secondary border me-2 rounded-pill px-3">
                                    #@order.order_id
                                </span>
                                <span class="text-muted small">
                                    <i class="bi bi-calendar3 me-1"></i> @order.order_buy_time.ToString("dd/MM/yyyy HH:mm")
                                </span>
                            </div>
                            <div class="mt-2 mt-sm-0">
                                <span class="badge rounded-pill @badgeClass status-badge shadow-sm">
                                    <i class="bi @iconState me-1"></i> @stateText
                                </span>
                            </div>
                        </div>

                        <div class="card-body bg-light bg-opacity-10 pt-0">
                            <hr class="mt-0 mb-3 text-muted opacity-25">

                            <div class="row align-items-center">
                                <div class="col-md-8 mb-3 mb-md-0 border-end-md">
                                    <div class="d-flex align-items-start">
                                        <div class="me-3 mt-1 text-primary">
                                            <i class="bi bi-basket2-fill fs-4"></i>
                                        </div>
                                        <div>
                                            <h6 class="fw-bold text-dark mb-1">Sản phẩm đã đặt:</h6>
                                            @if (order.ItemNames.Any())
                                            {
                                                <ul class="mb-0 ps-3 small text-secondary">
                                                    @foreach (var name in order.ItemNames)
                                                    {
                                                        <li>@name</li>
                                                    }
                                                    @if (order.TotalItemCount > order.ItemNames.Count)
                                                    {
                                                        <li class="fst-italic text-muted">... và @(order.TotalItemCount - order.ItemNames.Count) sản phẩm khác</li>
                                                    }
                                                </ul>
                                            }
                                            else
                                            {
                                                <span class="text-danger small">Không tìm thấy chi tiết sản phẩm.</span>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4 text-md-end ps-md-4">
                                    <div class="mb-1">
                                        <span class="small text-muted">Tổng thanh toán</span>
                                    </div>
                                    <div class="fs-4 fw-bold text-danger mb-2">
                                        @string.Format("{0:N0} đ", order.order_total_price)
                                    </div>

                                    <div class="mb-3">
                                        <span class="badge bg-light text-dark border fw-normal">
                                            <i class="bi bi-credit-card me-1"></i> @paymentText
                                        </span>
                                    </div>

                                    <a href="@Url.Action("Details", "Order", new { id = order.order_id })"
                                       class="btn btn-outline-primary rounded-pill px-4 btn-sm fw-bold">
                                        Xem Chi Tiết <i class="bi bi-chevron-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5 bg-light rounded-4 animate__animated animate__fadeInUp">
            <div class="mb-3">
                <i class="bi bi-clipboard-x display-1 text-muted opacity-25"></i>
            </div>
            <h5 class="text-secondary fw-bold">Không tìm thấy đơn hàng nào theo bộ lọc này.</h5>
            <div class="mt-4 gap-2 d-flex justify-content-center">
                <a href="@Url.Action("History", new { status = -1 })" class="btn btn-outline-secondary rounded-pill px-4">
                    Xem tất cả đơn
                </a>
                <a href="@Url.Action("Index","Shop")" class="btn btn-primary rounded-pill px-4">
                    Tiếp tục mua sắm
                </a>
            </div>
        </div>
    }
</div>