@model old_phone.ViewModels.OrderDetailViewModel

@{
    ViewBag.Title = "Chi Tiết Đơn Hàng #" + Model.OrderId;
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Hàm để lấy class màu cho trạng thái
    Func<string, string> GetStatusClass = (state) =>
    {
        switch (state)
        {
            case "PREPARE": return "text-warning";
            case "SHIPPING": return "text-info";
            case "SUCCESS": return "text-success";
            case "CANCEL": return "text-danger";
            default: return "text-secondary";
        }
    };

    // Hàm để lấy tên trạng thái tiếng Việt
    Func<string, string> GetStatusName = (state) =>
    {
        switch (state)
        {
            case "PREPARE": return "Đang Chuẩn Bị Hàng";
            case "SHIPPING": return "Đang Giao Hàng";
            case "SUCCESS": return "Đã Giao Hàng";
            case "CANCEL": return "Đã Hủy";
            default: return "Chờ Xử Lý";
        }
    };
}

<style>
    .detail-card-header {
        border-bottom: 2px solid #0d6efd;
    }

    .text-main-CL {
        color: #0d6efd !important;
    }
</style>

<div class="container py-5">
    <div class="text-center mb-4">
        <h3 class="fw-bold text-main-CL text-uppercase">
            <i class="bi bi-receipt-cutoff me-2"></i> Chi Tiết Đơn Hàng
        </h3>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-header bg-white p-4 detail-card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="fw-bold mb-0">Đơn Hàng #@Model.OrderId</h5>
                <span class="fw-bold @GetStatusClass(Model.State)">
                    Trạng Thái: @GetStatusName(Model.State)
                </span>
            </div>
            <small class="text-muted">Ngày đặt: @Model.BuyTime.ToString("dd/MM/yyyy HH:mm")</small>
            <br>
            <small class="text-muted">Ngày giao hàng (dự kiến): @Model.BuyTime.AddDays(3).ToString("dd/MM/yyyy")</small>
        </div>

        <div class="card-body p-4">
            <div class="row">

                @* --- THÔNG TIN GIAO HÀNG (Cột trái) --- *@
                <div class="col-md-6 mb-4 mb-md-0">
                    <h6 class="fw-bold text-main-CL mb-3"><i class="bi bi-geo-alt-fill me-2"></i> Thông Tin Nhận Hàng</h6>
                    <ul class="list-unstyled small">
                        <li><span class="fw-bold">Người nhận:</span> @Model.RecipientName</li>
                        <li><span class="fw-bold">Điện thoại:</span> @Model.RecipientPhone</li>
                        <li><span class="fw-bold">Địa chỉ:</span> @Model.RecipientAddress</li>
                    </ul>
                </div>

                @* --- THÔNG TIN THANH TOÁN (Cột phải) --- *@
                <div class="col-md-6">
                    <h6 class="fw-bold text-main-CL mb-3"><i class="bi bi-wallet-fill me-2"></i> Thanh Toán & Tổng Kết</h6>
                    <ul class="list-unstyled small">
                        <li><span class="fw-bold">Hình thức:</span> @Model.PaymentType</li>
                        <li><span class="fw-bold">Phí vận chuyển:</span> <span class="text-success">FREE</span></li>
                        <li class="mt-2 pt-2 border-top">
                            <span class="fw-bold fs-5 text-danger">TỔNG TIỀN:</span>
                            <span class="fw-bold fs-5 text-danger">@string.Format("{0:N0} đ", Model.TotalPrice)</span>
                        </li>
                    </ul>
                </div>
            </div>

            <hr class="my-4" />

            @* --- DANH SÁCH SẢN PHẨM TRONG ĐƠN --- *@
            <h6 class="fw-bold text-main-CL mb-3"><i class="bi bi-basket-fill me-2"></i> Sản Phẩm Đã Đặt (@Model.Items.Count())</h6>
            <div class="list-group list-group-flush border rounded-3">
                @foreach (var item in Model.Items)
                {
                    <div class="list-group-item d-flex align-items-center py-3">
                        <img src="@item.ImageUrl" alt="@item.ProductName" style="width: 70px; height: 70px; object-fit: contain;" class="border rounded me-3">
                        <div class="flex-grow-1">
                            <h6 class="mb-0 fw-bold text-truncate">@item.ProductName</h6>
                            <small class="text-muted">Giá mua: @string.Format("{0:N0} đ", item.UnitPrice)</small>
                        </div>
                        <div class="text-end ms-3">
                            <span class="d-block fw-bold text-secondary">x @item.Quantity</span>
                            <span class="d-block text-danger fw-bold">@string.Format("{0:N0} đ", item.UnitPrice * item.Quantity)</span>
                        </div>
                    </div>
                }
            </div>

            <div class="text-end mt-4">
                <a href="@Url.Action("History")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại Lịch Sử Đơn Hàng
                </a>

                @* Thêm logic hủy đơn nếu trạng thái cho phép (ví dụ: PREPARE) *@
                @if (Model.State == "PREPARE")
                {
                    <a href="#" class="btn btn-danger ms-2" onclick="return alert('Chức năng đang được phát triển thêm :))!')">
                        <i class="bi bi-x-circle"></i> Hủy Đơn Hàng
                    </a>
                }
            </div>
        </div>
    </div>
</div>