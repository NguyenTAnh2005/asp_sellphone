@model old_phone.ViewModels.OrderDetailViewModel

@{
    ViewBag.Title = "Chi Tiết Đơn Hàng #" + Model.OrderId;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Card thông tin */
    .info-card {
        background-color: #f8f9fa;
        border: 1px solid #e9ecef;
        transition: all 0.2s;
    }

        .info-card:hover {
            background-color: #fff;
            border-color: #dee2e6;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

    /* Ảnh sản phẩm */
    .product-img-frame {
        width: 80px;
        height: 80px;
        background: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        border: 1px solid #eee;
    }
</style>

<div class="container py-5">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 animate__animated animate__fadeInDown">
        <div class="mb-3 mb-md-0 text-center text-md-start ">
            <h3 class="fw-bold text-dark mb-1">
                Chi Tiết Đơn Hàng <span class="text-primary">#@Model.OrderId</span>
            </h3>
            <span class="text-muted small">
                Ngày đặt: <span class="fw-bold">@Model.BuyTime.ToString("dd/MM/yyyy HH:mm")</span>
            </span>
        </div>

        <div class="text-center">
            <span class="badge rounded-pill px-4 py-2 fs-6 shadow-sm @(Model.StateClass == "text-warning" ? "bg-warning text-dark" :
                                                                       Model.StateClass == "text-info" ? "bg-info text-dark" :
                                                                       Model.StateClass == "text-primary" ? "bg-primary" :
                                                                       Model.StateClass == "text-success" ? "bg-success" : "bg-danger")">
                @Model.StateName
            </span>
            <div class="small text-muted mt-1 fst-italic">
                Dự kiến giao: @Model.BuyTime.AddDays(3).ToString("dd/MM/yyyy")
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-6 animate__animated animate__fadeInLeft">
            <div class="card info-card h-100 rounded-4 p-3">
                <h6 class="fw-bold text-primary text-uppercase mb-3">
                    <i class="bi bi-geo-alt-fill me-2"></i>Địa Chỉ Nhận Hàng
                </h6>
                <div class="d-flex mb-2">
                    <div class="me-3 text-secondary"><i class="bi bi-person-circle"></i></div>
                    <div><span class="fw-bold text-dark">@Model.RecipientName</span></div>
                </div>
                <div class="d-flex mb-2">
                    <div class="me-3 text-secondary"><i class="bi bi-telephone-fill"></i></div>
                    <div>@Model.RecipientPhone</div>
                </div>
                <div class="d-flex">
                    <div class="me-3 text-secondary"><i class="bi bi-house-door-fill"></i></div>
                    <div class="text-break">@Model.RecipientAddress</div>
                </div>
            </div>
        </div>

        <div class="col-md-6 animate__animated animate__fadeInRight">
            <div class="card info-card h-100 rounded-4 p-3">
                <h6 class="fw-bold text-primary text-uppercase mb-3">
                    <i class="bi bi-wallet2 me-2"></i>Thông Tin Thanh Toán
                </h6>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Hình thức:</span>
                    <span class="fw-bold text-dark text-end">@Model.PaymentType</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Phí vận chuyển:</span>
                    <span class="fw-bold text-success">Miễn phí</span>
                </div>
                <hr class="my-2 opacity-25">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fw-bold text-secondary">TỔNG CỘNG:</span>
                    <span class="fw-bold text-danger fs-4">@string.Format("{0:N0} đ", Model.TotalPrice)</span>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 animate__animated animate__fadeInUp" style="max-height:300px;overflow-y: auto">
        <div class="card-header bg-white py-3 border-bottom-0">
            <h6 class="fw-bold text-dark mb-0">
                <i class="bi bi-bag-check-fill me-2 text-warning"></i>Sản Phẩm Đã Mua (@Model.Items.Count)
            </h6>
        </div>
        <div class="card-body bg-light bg-opacity-25 p-0">
            @foreach (var item in Model.Items)
            {
                <div class="p-3 border-bottom bg-white">
                    <div class="d-flex align-items-center">
                        <div class="product-img-frame flex-shrink-0">
                            <img src="@item.ImageUrl" alt="@item.ProductName" class="w-100 h-100 object-fit-contain p-1">
                        </div>

                        <div class="ms-3 flex-grow-1">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="fw-bold text-dark mb-1 text-truncate-2">@item.ProductName</h6>
                                    <div class="small text-muted">
                                        Đơn giá: @string.Format("{0:N0} đ", item.UnitPrice)
                                    </div>
                                </div>
                                <div class="text-end">
                                    <div class="fw-bold text-danger">@string.Format("{0:N0} đ", item.UnitPrice * item.Quantity)</div>
                                    <div class="small text-muted fw-bold">x @item.Quantity</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="card-footer bg-white py-3 border-top-0 d-flex justify-content-end align-items-center">
            <a href="@Url.Action("History", "Order")" class="btn btn-outline-secondary rounded-pill px-4 me-2 fw-bold">
                <i class="bi bi-arrow-left me-1"></i> Quay lại
            </a>

            @if (Model.State <= 1)
            {
                <button type="button" class="btn btn-danger rounded-pill px-4 fw-bold shadow-sm" onclick="alert('Tính năng đang được phát triển!')">
                    <i class="bi bi-x-circle me-1"></i> Hủy Đơn Hàng
                </button>
            }
        </div>
        <small class="text-center pb-4 text-danger fw-semibold">Tính năng hủy đơn hàng đang được phát triển!</small>
    </div>
</div>